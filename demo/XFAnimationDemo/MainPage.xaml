		<ContentPage Title="BoxView" Icon="star.png">
			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition Height="55*"/>
					<RowDefinition Height="40*"/>
					<RowDefinition Height="5*"/>
				</Grid.RowDefinitions>
				<BoxView Grid.Row="0" Color="Black" CornerRadius="0" Margin="30">
					<BoxView.Triggers>
						<DataTrigger TargetType="BoxView" Binding="{Binding Path=IsAnimationWorking,Mode=OneWay,UpdateSourceEventName=PropertyChanged}" Value="true">
							<DataTrigger.EnterActions>
								<animationsPack:BoxViewColorAnimation To="Teal"/>
								<animationsPack:BoxViewCornerRadiusAnimation To="40"/>
							</DataTrigger.EnterActions>
							<DataTrigger.ExitActions>
								<animationsPack:BoxViewColorAnimation To="Black"/>
								<animationsPack:BoxViewCornerRadiusAnimation To="0"/>
							</DataTrigger.ExitActions>
						</DataTrigger>
					</BoxView.Triggers>
				</BoxView>
				<TableView Grid.Row="1" BackgroundColor="{StaticResource PropertyBackgroundColor}">
					<TableView.Root>
						<TableSection Title="Property">
							<TextCell Text="Color" Detail="Black > Teal > Black"/>
							<TextCell Text="CornerRadius" Detail="0 > 40 > 0"/>
						</TableSection>
					</TableView.Root>
				</TableView>
			<Button Grid.Row="2" Command="{Binding RunAnimation}" Text="RunAnimation" BackgroundColor="{StaticResource ButtonBackgroundColor}" CornerRadius="7" Margin="30,0"/>
			</Grid>
		</ContentPage>
		<ContentPage Title="Button" Icon="star.png">
			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition Height="55*"/>
					<RowDefinition Height="40*"/>
					<RowDefinition Height="5*"/>
				</Grid.RowDefinitions>
				<Button Grid.Row="0" Text="Button" BorderColor="Black" BorderWidth="1.0" CornerRadius="0" FontSize="20" Padding="0" TextColor="Blue" Margin="30">
					<Button.Triggers>
						<DataTrigger TargetType="Button" Binding="{Binding Path=IsAnimationWorking,Mode=OneWay,UpdateSourceEventName=PropertyChanged}" Value="true">
							<DataTrigger.EnterActions>
								<animationsPack:ButtonBorderColorAnimation To="Fuchsia"/>
								<animationsPack:ButtonBorderWidthDoubleAnimation To="5.0"/>
								<animationsPack:ButtonCornerRadiusAnimation To="30"/>
								<animationsPack:ButtonFontSizeDoubleAnimation To="40"/>
								<animationsPack:ButtonPaddingThicknessAnimation To="10"/>
								<animationsPack:ButtonTextColorAnimation To="Green"/>
							</DataTrigger.EnterActions>
							<DataTrigger.ExitActions>
								<animationsPack:ButtonBorderColorAnimation To="Black"/>
								<animationsPack:ButtonBorderWidthDoubleAnimation To="1.0"/>
								<animationsPack:ButtonCornerRadiusAnimation To="0"/>
								<animationsPack:ButtonFontSizeDoubleAnimation To="20"/>
								<animationsPack:ButtonPaddingThicknessAnimation To="0"/>
								<animationsPack:ButtonTextColorAnimation To="Blue"/>
							</DataTrigger.ExitActions>
						</DataTrigger>
					</Button.Triggers>
				</Button>
				<TableView Grid.Row="1" BackgroundColor="{StaticResource PropertyBackgroundColor}">
					<TableView.Root>
						<TableSection Title="Property">
							<TextCell Text="BorderColor" Detail="Black > Teal > Black"/>
							<TextCell Text="BorderWidth" Detail="1.0 > 5.0 > 1.0"/>
							<TextCell Text="CornerRadius" Detail="0 > 30 > 0"/>
							<TextCell Text="FontSize" Detail="20 > 40 > 20"/>
							<TextCell Text="Padding" Detail="0 > 10 > 0"/>
							<TextCell Text="TextColor" Detail="Blue > Green > Blue"/>
						</TableSection>
					</TableView.Root>
				</TableView>
			<Button Grid.Row="2" Command="{Binding RunAnimation}" Text="RunAnimation" BackgroundColor="{StaticResource ButtonBackgroundColor}" CornerRadius="7" Margin="30,0"/>
			</Grid>
		</ContentPage>
	</MasterDetailPage.Children>
</MasterDetailPage>